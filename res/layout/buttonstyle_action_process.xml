<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_pressed="true" >
	<shape>
		<solid android:color="#e4a095" />
		<stroke android:width="1dp" android:color="#2f0000" />
		<corners android:radius="3dp" />
		<padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
	</shape>
</item>

<item>
	<shape>
		<gradient android:startColor="#df6956" android:endColor="#ea4b31" android:angle="270" />
		<stroke android:width="1dp" android:color="#2f6699" /> <corners android:radius="4dp" />
		<padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
	</shape>
</item>

</selector>